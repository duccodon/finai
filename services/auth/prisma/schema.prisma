datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String

  // profile fields
  username  String?
  firstName String?
  lastName  String?
  phone     String?
  company   String?
  street    String?
  city      String?
  state     String?
  location  String?
  about     String?  @db.Text

  // date of birth - optional
  dob       DateTime?

  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}